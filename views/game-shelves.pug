extends layout.pug

block append head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    //- title Good Games - #{currentUser}
    title Game Shelves

        body
            block append header
                head
                        div(class="shelf_add")
                            label(for="shelf_name")
                            input(type="text" id="shelf_name" name="shelf_name" value placeholder="Shelf Name" required)
                            button(type="submit" id="shelf_submit" value="Submit") Create Shelf
                        div(class="shelf_list")
                            each shelf in gameShelves
                                div(class="each_shelf" id=`${shelf.id}`)= shelf.shelf_name
                                    div(class="eachShelf_container")
                                        div(class="")
                                            form(action="/game-shelves/delete" method="post")
                                              input(type="hidden" name="shelfId" value=shelf.id)
                                              input(type="submit" value="Delete Shelf")
