extends layout.pug

block append head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/stylesheets/all-games.css")
    title All Games

block append main
    body
        div(class="allGames")
            div(class="search")
                form(action="/games")
                    input(type="text" name="search")
                    input(type="submit" value="Search")
            div(class="foundGames")
                each game in games
                    div(class="gameBox")
                        a(href=`/games/${game.id}`)
                            img(class="gameImage" src=game.game_img, alt="#{game.name}")
